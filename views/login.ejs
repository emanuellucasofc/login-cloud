<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login</title>
  <style>
    body{
      margin:0;
      min-height:100vh;
      display:flex;
      align-items:center;
      justify-content:center;
      font-family: Arial, Helvetica, sans-serif;
      background:#0b1220;
      color:#fff;
      padding:24px;
    }
    .card{
      width:min(420px, 92vw);
      background:#111827;
      border:1px solid rgba(255,255,255,.15);
      border-radius:14px;
      padding:24px;
    }
    h2{margin:0 0 14px; font-size:22px;}
    .error{background:#3a0f18;border:1px solid #7a2435;padding:10px;border-radius:10px;margin-bottom:12px}
    label{display:block;margin:12px 0 6px;color:#cbd5ff}
    input{width:100%;padding:12px;border-radius:10px;border:1px solid rgba(255,255,255,.15);background:#0b1220;color:#fff}
    button{width:100%;margin-top:16px;padding:12px;border-radius:10px;border:0;background:#3b82f6;color:#fff;font-weight:700;cursor:pointer}
  </style>
</head>
<body>
  <div class="card">
    <h2>âœ… TELA DE LOGIN (TESTE)</h2>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form method="POST" action="/login">
      <label>Email</label>
      <input name="email" type="email" required placeholder="admin@site.com" />

      <label>Senha</label>
      <input name="password" type="password" required placeholder="123456" />

      <button type="submit">Entrar</button>
    </form>
